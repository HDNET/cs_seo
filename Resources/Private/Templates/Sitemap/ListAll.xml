<html xmlns="http://www.sitemaps.org/schemas/sitemap/0.9"
     xmlns:f="http://typo3.org/ns/fluid/ViewHelpers">

<f:layout name="Sitemap" />

<f:section name="Main"><f:if condition="{settings.pages.rootPid}"><url>
		<loc>{f:uri.page(additionalParams:'{type:655, tx_csseo_view:\'all\'}', absolute:1) -> f:format.htmlspecialchars()}</loc>
	</url></f:if>
	<f:for each="{settings.extensions}" as="extension" key="ext"><url>
		<loc>{f:uri.page(additionalParams:'{type:655, tx_csseo_view:\'extension\', ext:ext}', absolute:1) -> f:format.htmlspecialchars()}</loc>
	</url></f:for>
	<f:for each="{settings.additional}" as="extraUrl"><url>
		<loc>{extraUrl -> f:format.htmlspecialchars()}</loc>
	</url></f:for></f:section>
