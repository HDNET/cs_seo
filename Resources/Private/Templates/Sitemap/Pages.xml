<html xmlns="http://www.sitemaps.org/schemas/sitemap/0.9"
     xmlns:f="http://typo3.org/ns/fluid/ViewHelpers">

<f:layout name="Sitemap" />

<f:section name="Main">
	<f:for each="{pages}" as="page"><url>
			<loc>{f:link.page(pageUid:page.uid,absolute:1) -> f:format.htmlspecialchars()} </loc>
			<f:if condition="{record.lastmod}"><lastmod>{record.lastmod -> f:format.date(format:'Y-m-d')}</lastmod></f:if>
		</url>
	</f:for>
</f:section>
